# ============================================
# BSC Arbitrage Bot Configuration
# ============================================

# RPC Endpoints (comma-separated)
RPC_ENDPOINTS=https://bsc-dataseed.binance.org,https://bsc-dataseed1.defibit.io,https://bsc-dataseed1.ninicoin.io,https://bsc.publicnode.com,https://bsc-rpc.publicnode.com

# WebSocket Endpoints (comma-separated)
WS_ENDPOINTS=wss://bsc.publicnode.com

# Optional: Alchemy endpoints (faster, more reliable)
ALCHEMY_RPC_URL=
ALCHEMY_WS_URL=

# ============================================
# Detection Parameters
# ============================================

# Minimum profit percentage to consider (before gas/fees)
MIN_PROFIT_PERCENTAGE=0.5

# Maximum slippage tolerance (percentage)
MAX_SLIPPAGE=1.0

# Default gas price in Gwei (used if dynamic fetch fails)
GAS_PRICE_GWEI=5

# Enable dynamic gas price fetching
DYNAMIC_GAS=true

# Debug mode (verbose logging)
DEBUG_MODE=false

# ============================================
# Execution Configuration (Flash Loans)
# ============================================

# Enable trade execution (false = detection only)
EXECUTION_ENABLED=false

# Execution mode: 'simulation' or 'live'
# simulation = validate with eth_call, no real trades
# live = actual transactions (requires PRIVATE_KEY)
EXECUTION_MODE=simulation

# Deployed FlashArbitrage contract address
# Get this after running: npm run deploy
FLASH_CONTRACT_ADDRESS=

# Wallet private key for signing transactions
# WARNING: NEVER commit this! Keep it secret!
PRIVATE_KEY=

# Minimum net profit in USD to execute (after all fees)
MIN_PROFIT_USD=1.0

# Maximum gas price in Gwei (abort if higher)
MAX_GAS_PRICE_GWEI=10

# Slippage tolerance for trades (percentage)
SLIPPAGE_TOLERANCE=1.0

# ============================================
# Triangular Arbitrage
# ============================================

# Enable triangular arbitrage detection
TRIANGULAR_ENABLED=true

# Minimum liquidity per pool in USD
TRIANGULAR_MIN_LIQUIDITY=5000

# Maximum trade size in USD
TRIANGULAR_MAX_TRADE=5000

# ============================================
# Alerts
# ============================================

# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# Logging & Monitoring
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Save logs to file
LOG_TO_FILE=true

# ============================================
# Performance
# ============================================

# Maximum token pairs to monitor
MAX_PAIRS_TO_MONITOR=100

# Cache size for price data
CACHE_SIZE=5000

# Block processing timeout in ms
BLOCK_PROCESSING_TIMEOUT_MS=5000

# Max RPC requests per minute (rate limiting)
MAX_RPC_RPM=300

# ============================================
# Environment
# ============================================

# Node environment: development or production
NODE_ENV=development

# BscScan API key (for contract verification)
BSCSCAN_API_KEY=
