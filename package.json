{
  "name": "bsc-arbitrage-bot",
  "version": "2.0.0",
  "description": "BNB Chain DEX arbitrage bot with flash loans, triangular arbitrage, and atomic execution",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:contracts": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network bsc",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network bscTestnet",
    "verify": "npx hardhat verify --network bsc",
    "simulation": "EXECUTION_MODE=simulation node src/index.js",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "arbitrage",
    "bsc",
    "bnb-chain",
    "defi",
    "dex",
    "pancakeswap",
    "biswap",
    "trading-bot",
    "flash-loans",
    "triangular-arbitrage",
    "mev"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.10.0",
    "winston": "^3.11.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.4",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
